// @gfg : Minimum number of Coins

//-----------------------------------------------------------ALGO-----------------------------------------------------------------

class Solution{
public:
    vector<int> minPartition(int N)
    {
        
        int coins[] = {2000,500,200,100,50,20,10,5,2,1};
        
        vector<int> ans;  
        for(int i=0; i<10; i++){
            
            while( coins[i] <= N ){
                ans.push_back(coins[i]);
                N = N - coins[i];
            }
            
        }
        
        return ans;
        
    }
};

//---------------------------------------------------------------------------------------------------------------------------------
