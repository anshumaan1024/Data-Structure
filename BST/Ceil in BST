// @gfg : Ceil in BST

//------------------------------------------------------------------------------------------------------------------------------------------------------------

int findCeil(struct Node* root, int input) {
    
    int ceil = -1;
    while(root!=NULL){
        
        if(root->data == input)
            return root->data;
        else if( input < root->data ){
            ceil = root->data;
            root = root->left;
        }
        else{
            root = root->right;
        }
    
    }
    
    return ceil;
    
}

//------------------------------------------------------------------------------------------------------------------------------------------------------------
