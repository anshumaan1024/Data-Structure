// @gfg : Smallest number on left

//---------------------------------------------------------------------------------------------------------------------------------------

class Solution{
public:
    vector<int> leftSmaller(int n, int a[]){
        
        vector<int> ans(n);
        stack<int> st;
        
        for(int i=0; i<n; i++){
            
            if(st.empty())
                st.push(a[i]);
            
            while(!st.empty() && st.top() >= a[i])
                st.pop();
                
            if(st.empty())
                ans[i] = -1;
            
            else
                ans[i] = st.top();
            
            st.push(a[i]);
            
        }
        
        return ans;
        
    }
};

//---------------------------------------------------------------------------------------------------------------------------------------
