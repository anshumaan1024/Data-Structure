// @leetcode : Fibonacci Number
//
//---------------------------------------------------------------------recursive---------------------------------------------------------------------

class Solution {
public:
    int fib(int n) {
        
        if(n==1 || n==0)    return n;

        return fib(n-1) + fib(n-2);

    }
};

//------------------------------------------------------------------memoization-------------------------------------------------------------------------

class Solution {
public:
    int f(int n, vector<int> &dp){

        if(n==1 || n==0)    return n;
        
        if(dp[n]!=-1)       return dp[n];

        return dp[n] = f(n-1,dp) + f(n-2,dp);
    }
public:
    int fib(int n) {

        vector<int> dp(n+1,-1);
        return f(n,dp);  
    }
};

//---------------------------------------------------------------------tabulation-------------------------------------------------------------------------

