// @leetcode: Sliding Window Maximum

//-------------------------------------------------------------NAIVE-------------------------------------------------------------------

class Solution {
public:
    vector<int> maxSlidingWindow(vector<int>& nums, int k) {

        int n = nums.size();
        vector<int> ans;
        for(int i=0; i<=n-k; i++){

            int maxx = nums[i];
            for(int j=i; j<i+k; j++){
                maxx = max( maxx, nums[j]);
            }

            ans.push_back(maxx);
        }

        return ans;
        
    }
};

//-----------------------------------------------------------BETTER APPROACH------------------------------------------------------------
// using max heap



